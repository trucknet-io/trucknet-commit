{
  "linters": {
    "*.js": [
      "npm run lint:prettier",
      "npm run lint:eslint:fix",
      "git add"
    ],
    "*.json": [
      "npm run lint:prettier",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.tsx": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}